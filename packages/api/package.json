{
  "name": "@nugudi/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./msw": {
      "import": "./dist/index.msw.js",
      "types": "./dist/index.msw.d.ts"
    },
    "./schemas": {
      "import": "./dist/index.schemas.js",
      "types": "./dist/index.schemas.d.ts"
    }
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "vite build",
    "check-types": "tsc --noEmit",
    "codegen": "pnpm run codegen:fetch && pnpm run codegen:generate",
    "codegen:fetch": "curl https://dev.nugudi.com/v3/api-docs -o ./src/api/openapi.json",
    "codegen:generate": "orval --config orval.config.ts",
    "dev": "vite",
    "lint": "biome check ."
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/node": "^22.10.6",
    "msw": "^2.7.0",
    "openapi3-ts": "^4.5.0",
    "orval": "^7.5.2",
    "typescript": "^5.8.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "@faker-js/faker": ">=9.0.0",
    "@tanstack/react-query": "^5.81.2",
    "msw": ">=2.0.0",
    "react": ">=19.2.0"
  },
  "peerDependenciesMeta": {
    "@faker-js/faker": {
      "optional": true
    },
    "msw": {
      "optional": true
    }
  }
}
