{
  "name": "@nugudi/nugudi-ui",
  "version": "0.1.0",
  "private": true,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./style.css": "./dist/nugudi-ui.css"
  },
  "scripts": {
    "build": "vite build",
    "build:storybook": "storybook build --webpack-stats-json",
    "check-types": "tsc --noEmit",
    "chromatic": "npx chromatic --build-script-name=build:storybook",
    "deploy:chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --build-script-name=build:storybook",
    "dev": "vite dev",
    "dev:package": "vite dev",
    "dev:storybook": "storybook dev -p 6006",
    "lint": "biome check .",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@nugudi/assets-icons": "workspace:*",
    "@nugudi/react-components-button": "workspace:*",
    "@nugudi/react-components-chip": "workspace:*",
    "@nugudi/react-components-input": "workspace:*",
    "@nugudi/react-components-input-otp": "workspace:*",
    "@nugudi/react-components-layout": "workspace:*",
    "@nugudi/react-components-menu-card": "workspace:*",
    "@nugudi/react-components-navigation-item": "workspace:*",
    "@nugudi/react-components-step-indicator": "workspace:*",
    "@nugudi/react-components-switch": "workspace:*",
    "@nugudi/react-components-tab": "workspace:*",
    "@nugudi/react-components-textarea": "workspace:*",
    "@nugudi/react-components-backdrop": "workspace:*",
    "@nugudi/react-components-bottom-sheet": "workspace:*",
    "@nugudi/react-hooks-button": "workspace:*",
    "@nugudi/react-hooks-switch": "workspace:*",
    "@nugudi/react-hooks-toggle": "workspace:*",
    "@nugudi/themes": "workspace:*",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/recipes": "^0.5.7",
    "@vanilla-extract/sprinkles": "^1.6.5",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@storybook/addon-a11y": "^9.1.0",
    "@storybook/addon-backgrounds": "^9.0.8",
    "@storybook/addon-docs": "^9.1.0",
    "@storybook/addon-onboarding": "^9.1.0",
    "@storybook/addon-toolbars": "^9.0.8",
    "@storybook/addon-vitest": "^9.1.0",
    "@storybook/react-vite": "^9.1.0",
    "@tsconfig/vite-react": "^6.3.6",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "chromatic": "^12.2.0",
    "fast-glob": "^3.3.3",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "storybook": "^9.1.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-svgr": "^4.3.0"
  },
  "peerDependencies": {
    "@vitejs/plugin-react": "*",
    "@vitest/browser": "*",
    "@vitest/coverage-v8": "*",
    "playwright": "*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite-tsconfig-paths": "*",
    "vitest": "*"
  }
