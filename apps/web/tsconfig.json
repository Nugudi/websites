{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@entities/*": ["./src/entities/*"],
      "@application/*": ["./src/application/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@interface-adapters/*": ["./src/interface-adapters/*"],
      "@shared/*": ["./src/shared/*"],
      "@shared/interface-adapters/*": ["./src/shared/interface-adapters/*"],
      "@shared/infrastructure/*": ["./src/shared/infrastructure/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/routes.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
