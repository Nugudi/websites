{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@entities/*": ["./src/entities/*"],
      "@application/*": ["./src/application/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@interface-adapters/*": ["./src/interface-adapters/*"],
      "@shared/*": ["./src/shared/*"],
      "@shared/interface-adapters/*": ["./src/shared/interface-adapters/*"],
      "@shared/infrastructure/*": ["./src/shared/infrastructure/*"],
      "@auth/core/*": ["./src/domains/auth/core/*"],
      "@auth/core": ["./src/domains/auth/core/index.ts"],
      "@auth/domain/*": ["./src/domains/auth/domain/*"],
      "@auth/domain": ["./src/domains/auth/domain/index.ts"],
      "@auth/data/*": ["./src/domains/auth/data/*"],
      "@auth/data": ["./src/domains/auth/data/index.ts"],
      "@auth/infrastructure/*": ["./src/domains/auth/infrastructure/*"],
      "@auth/infrastructure": ["./src/domains/auth/infrastructure/index.ts"],
      "@auth/di/*": ["./src/domains/auth/di/*"],
      "@auth/di": ["./src/domains/auth/di/index.ts"],
      "@auth/presentation/*": ["./src/domains/auth/presentation/*"],
      "@auth/presentation": ["./src/domains/auth/presentation/index.ts"],
      "@benefit/ui/*": ["./src/domains/benefit/ui/*"],
      "@benefit/ui": ["./src/domains/benefit/ui/index.ts"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/routes.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
